      lcd_bvalue_dp_line_pos_left_sign ( 7, 0, 1, 9, false, false)
      delay_100ms (10)
      lcd_bvalue_dp_line_pos_left_sign ( 112, 1, 1, 13, false, false)
      delay_100ms (10)

      lcd_clear_line  (2)

      lcd_writechar("V")
      lcd_writechar("a")
      lcd_writechar("l")

      lcd_new_line_cursor_position (2, 5)  ;

      lcd_writechar ("=")


      lcd_clear_line  (1)

      value1 = 0
      wvalue = 5000

      while wvalue != 0  loop
            lcd_wvalue_dp_line_pos_left_sign ( wvalue, 2, 2, 7, true, false)
            wvalue = wvalue - 1
            delay_1ms(3)
       end loop
            lcd_wvalue_dp_line_pos_left_sign ( wvalue, 2, 2, 7, true, false)
      delay_100ms (20)

