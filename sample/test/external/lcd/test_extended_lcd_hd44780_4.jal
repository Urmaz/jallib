------------- MAIN program -----------------------------------------------
--------------------------------------------------------------------------




   var byte data
   var word wvalue = 0
   var byte value = 0
   var byte value1 = 0
   var byte test = 0
   var byte HRS = 12
   var byte MIN = 55
   var byte SEC = 40
   var byte YEAR = 09
   var word YEARW = 2009
   var byte MOUNTH = 03
   var byte DAY = 23

   const byte teststring[] = "test display"

      lcd_new_line_cursor_position (1, 1)
