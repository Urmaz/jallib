;@jallib section chipdef 
-- chip setup
include 16f877

pragma target clock 20_000_000                  -- xtal frequency
pragma target OSC        hs
pragma target   LVP disabled
pragma target   WDT disabled
;@jallib section ccp
-- backlight control (can be variable and digital on this pin)
alias lcd_bl is pin_c2
alias lcd_bl_direction is pin_c2_direction

enable_digital_io()

-- Configure PWM
pin_ccp2_direction = output
include pwm_hardware
pwm_max_resolution(1)
pwm2_on()

forever loop
    var byte i
    i = 0
    -- loop up and down, to produce different duty cycle
    while i < 250 loop
        pwm2_set_dutycycle(i)
        _usec_delay(10000)
        i = i + 1
    end loop
    while i > 0 loop
        pwm2_set_dutycycle(i)
        _usec_delay(10000)
        i = i - 1
    end loop
    -- turning off, the LED lights at max.
    _usec_delay(500000)
    pwm2_off()
    _usec_delay(500000)
    pwm2_on()

end loop
