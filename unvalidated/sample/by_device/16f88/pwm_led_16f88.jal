--
-- Description: this sample show how to use PWM in low resolution mode.
-- It progressively light up and down a LED. Sweet...
--
-- 
--

-- select chip
include 16f88
-- set all IO as digital
enable_digital_io()

-- We'll use internal oscillator. It work @ 8MHz
pragma target clock		8_000_000
pragma target OSC		INTOSC_NOCLKOUT
-- no watchdog, please
pragma target WDT		disabled


-- Configure PWM
pin_b0_direction = output
include pwm_ccp1
pwm_max_resolution(1)
pwm1_on()

forever loop
	var byte i
	i = 0
	-- loop up and down, to produce different duty cycle
	while i < 250 loop
		pwm1_set_dutycycle(i)
		_usec_delay(100000)
		i = i + 10
	end loop
	while i > 0 loop
		pwm1_set_dutycycle(i)
		_usec_delay(100000)
		i = i - 10
	end loop
	-- turning off, the LED lights at max.
	_usec_delay(500000)
	pwm1_off()
	_usec_delay(500000)
	pwm1_on()

end loop

