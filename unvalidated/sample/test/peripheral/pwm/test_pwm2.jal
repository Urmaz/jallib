-- --------------------------------------------------------------------------
-- pwm2 TEST file 
-- --------------------------------------------------------------------------
-- This file defines a test for JALLIB testing, using a test-board
--  defined by a BOARD file .
--
-- setup: a led on ccp2
--
-- --------------------------------------------------------------------------
-- 
-- --------------------------------------------------------------------------

enable_digital_io()

-- Configure PWM
pin_ccp2_direction = output
include pwm_ccp2
pwm_max_resolution(1)
pwm2_on()

forever loop
	var byte i
	i = 0
	-- loop up and down, to produce different duty cycle
	while i < 250 loop
		pwm2_set_dutycycle(i)
		_usec_delay(10000)
		i = i + 1
	end loop
	while i > 0 loop
		pwm2_set_dutycycle(i)
		_usec_delay(10000)
		i = i - 1
	end loop
	-- turning off, the LED lights at max.
	_usec_delay(500000)
	pwm2_off()
	_usec_delay(500000)
	pwm2_on()

end loop

