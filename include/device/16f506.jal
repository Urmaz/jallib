--
-- Symbolic Fuse definitions
-- -------------------------
--
-- addr 0xFFF
--
pragma fuse_def OSC 0x7 {                  -- oscillator select
       LP = 0x0                            -- lp osc with 18 ms drt
       XT = 0x1                            -- xt osc with 18 ms drt
       HS = 0x2                            -- hs osc with 18 ms drt
       EC_NOCLKOUT = 0x3                   -- ec osc with rb4 and 18 ms drt
       INTOSC_NOCLKOUT = 0x4               -- intrc with rb4 and 1 ms drt
       INTOSC_CLKOUT = 0x5                 -- intrc with clkout and 1 ms drt
       RC_NOCLKOUT = 0x6                   -- extrc with rb4 1 ms drt
       RC_CLKOUT = 0x7                     -- extrc with clkout 1 ms drt
       }
pragma fuse_def WDT 0x8 {                  -- watchdog timer enable
       ENABLED = 0x8                       -- enabled
       DISABLED = 0x0                      -- disabled
       }
pragma fuse_def CP 0x10 {                  -- code protect
       DISABLED = 0x10                     -- off
       ENABLED = 0x0                       -- on
       }
pragma fuse_def MCLR 0x20 {                -- master clear enable
       EXTERNAL = 0x20                     -- rb3/mclr functions as mclr
       INTERNAL = 0x0                      -- rb3/mclr functions as rb3
       }
pragma fuse_def IOSCFS 0x40 {              -- internal oscillator frequency select
       F8MHZ = 0x40                        -- 8 mhz intosc speed
       F4MHZ = 0x0                         -- 4 mhz intosc speed
       }
