;@jallib use chipdef
;@jallib use led      
;@jallib use button

include delay

enable_digital_io()

led_direction = output

procedure my_delay() is
   if (button) then
     delay_1ms(250)
   else
     delay_1ms(100)
   end if
end procedure

forever loop
  led = on         
  my_delay()
  led = off
  my_delay()
end loop
