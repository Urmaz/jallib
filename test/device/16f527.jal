--
--    Symbolic Fuse Definitions
-- ------------------------------
--
-- CONFIG (0xFFF)
--
pragma fuse_def OSC 0x7 {                  -- oscillator selection
       LP = 0x0                            -- lp oscillator and automatic 18 ms drt (drten ignored)
       XT = 0x1                            -- xt oscillator and automatic 18 ms drt (drten ignored)
       HS = 0x2                            -- hs oscillator and automatic 18 ms drt (drten ignored)
       EC_NOCLKOUT = 0x3                   -- ec oscillator with i/o function on osc2/clkout and 10 us startup time
       INTOSC_NOCLKOUT = 0x4               -- intrc with i/o function on osc2/clkout and 10 us startup time
       INTOSC_CLKOUT = 0x5                 -- intrc with clkout function on osc2/clkout and 10 us startup time
       RC_NOCLKOUT = 0x6                   -- extrc with i/o function on osc2/clkout and 10 us startup time
       RC_CLKOUT = 0x7                     -- extrc with clkout function on osc2/clkout and 10 us startup time
       }
pragma fuse_def WDT 0x8 {                  -- watchdog timer enable
       ENABLED = 0x8                       -- wdt enabled
       DISABLED = 0x0                      -- wdt disabled
       }
pragma fuse_def CP 0x10 {                  -- code protection - user program memory
       DISABLED = 0x10                     -- code protection off
       ENABLED = 0x0                       -- code protection on
       }
pragma fuse_def MCLR 0x20 {                -- master clear enable
       EXTERNAL = 0x20                     -- mclr pin functions as mclr
       INTERNAL = 0x0                      -- mclr pin functions as i/o, mclr internally tied to vdd
       }
pragma fuse_def IOSCFS 0x40 {              -- internal oscillator frequency select
       F8MHZ = 0x40                        -- 8 mhz intosc speed
       F4MHZ = 0x0                         -- 4 mhz intosc speed
       }
pragma fuse_def CPD 0x80 {                 -- code protection - self writable memory
       DISABLED = 0x80                     -- code protection off
       ENABLED = 0x0                       -- code protection on
       }
pragma fuse_def BROWNOUT 0x100 {           -- brown-out reset enable
       ENABLED = 0x100                     -- bor enabled
       DISABLED = 0x0                      -- bor disabled
       }
pragma fuse_def DRTEN 0x200 {              -- device reset timer enable
       ENABLED = 0x200                     -- drt enabled (18 ms)
       DISABLED = 0x0                      -- drt disabled
       }
