            ANCON1_PCFG10 = true
            adc_pin_AN10_direction = input
         end if
         if an_pin_num == 11 then
            ANCON1_PCFG11 = true
            adc_pin_AN11_direction = input
         end if
         if an_pin_num == 12 then
            ANCON1_PCFG12 = true
            adc_pin_AN12_direction = input
         end if
      end if
   end procedure

